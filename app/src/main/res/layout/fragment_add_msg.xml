<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="8dp"
    tools:context=".AddMsgFragment">

    <LinearLayout
        android:layout_width="match_parent" android:orientation="vertical"
        android:layout_height="wrap_content">
        <EditText android:id="@+id/add_msg_content"
            android:layout_width="match_parent" android:inputType="textMultiLine" android:hint="在这里输入留言" android:padding="4dp"
            android:layout_height="240dp" android:background="@drawable/border" android:gravity="top" />
        <LinearLayout
            android:layout_width="match_parent" android:layout_marginTop="8dp"
            android:layout_height="wrap_content" android:orientation="vertical">
            <ImageView android:id="@+id/add_msg_add_img" android:visibility="visible"
                android:layout_width="32dp" android:layout_gravity="end" android:scaleType="centerCrop" android:background="@drawable/border"
                android:layout_height="32dp" android:src="@drawable/ic_add_grey" android:padding="0dp"
                android:contentDescription="icon" />
            <LinearLayout android:visibility="gone"
                android:layout_width="match_parent" android:orientation="horizontal"
                android:layout_height="96dp" android:id="@+id/add_msg_img_bar">
                <ImageView android:id="@+id/add_msg_img0"
                    android:layout_width="96dp" android:src="@drawable/ic_add_grey"
                    android:layout_height="96dp" android:padding="4dp" />
                <ImageView android:id="@+id/add_msg_img1" android:visibility="gone"
                    android:layout_width="96dp" android:src="@drawable/ic_add_grey"
                    android:layout_height="96dp" android:padding="4dp" />
                <ImageView android:id="@+id/add_msg_img2" android:visibility="gone"
                    android:layout_width="96dp" android:src="@drawable/ic_add_grey"
                    android:layout_height="96dp" android:padding="4dp" />
            </LinearLayout>
        </LinearLayout>
        <Button android:id="@+id/add_msg_submit"
            android:layout_width="match_parent" android:background="@drawable/border"
            android:layout_height="48dp" android:layout_marginTop="8dp" android:text="提交留言" android:textSize="20sp" />
    </LinearLayout>



</FrameLayout>