<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:padding="16dp"
    tools:context=".RegisterActivity">

    <LinearLayout android:layout_marginTop="32dp" android:background="@drawable/border"
        android:layout_width="match_parent" android:layout_gravity="center"
        android:layout_height="40dp" android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent" android:text="昵   称" android:layout_gravity="center_vertical" android:textSize="20sp" android:gravity="center" />
        <View
            android:layout_width="1dp" android:background="#999999"
            android:layout_height="match_parent"/>
        <EditText android:id="@+id/register_nickname" android:layout_margin="2dp" android:hint="2-15个字符"
            android:layout_width="match_parent" android:maxLines="1" android:inputType="text" android:layout_gravity="center_vertical" android:layout_marginLeft="16dp"
            android:layout_height="match_parent" android:textSize="20sp" android:background="#00ffffff" android:paddingLeft="8dp" android:paddingRight="8dp" android:paddingTop="4dp" android:paddingBottom="4dp" />
    </LinearLayout>

    <LinearLayout android:background="@drawable/border" android:layout_marginTop="16dp"
        android:layout_width="match_parent" android:layout_gravity="center"
        android:layout_height="40dp" android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent" android:text="密   码" android:layout_gravity="center_vertical" android:textSize="20sp" android:gravity="center" />
        <View
            android:layout_width="1dp" android:background="#999999"
            android:layout_height="match_parent"/>
        <EditText android:id="@+id/register_password" android:layout_margin="2dp" android:hint="6~10个字符"
            android:layout_width="match_parent" android:maxLines="1" android:inputType="textPassword" android:layout_gravity="center_vertical" android:layout_marginLeft="16dp"
            android:layout_height="match_parent" android:textSize="20sp" android:background="#00ffffff" android:paddingLeft="8dp" android:paddingRight="8dp" android:paddingTop="4dp" android:paddingBottom="4dp" />
    </LinearLayout>

    <LinearLayout android:background="@drawable/border" android:layout_marginTop="8dp"
        android:layout_width="match_parent" android:layout_gravity="center"
        android:layout_height="40dp" android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent" android:text="确认密码" android:layout_gravity="center_vertical" android:textSize="16sp" android:gravity="center" />
        <View
            android:layout_width="1dp" android:background="#999999"
            android:layout_height="match_parent"/>
        <EditText android:id="@+id/register_confirm_password" android:layout_margin="2dp"
            android:layout_width="match_parent" android:maxLines="1" android:inputType="textPassword" android:layout_gravity="center_vertical" android:layout_marginLeft="16dp"
            android:layout_height="match_parent" android:textSize="20sp" android:background="#00ffffff" android:paddingLeft="8dp" android:paddingRight="8dp" android:paddingTop="4dp" android:paddingBottom="4dp" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent" android:layout_marginTop="32dp"
        android:layout_height="wrap_content">
        <Button android:id="@+id/register_submit"
            android:layout_width="120dp" android:text="提    交" android:background="@drawable/border" android:textSize="20sp"
            android:layout_height="40dp" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</LinearLayout>