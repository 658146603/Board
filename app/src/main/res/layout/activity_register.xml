<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <LinearLayout android:layout_marginTop="80dp"
        android:layout_width="wrap_content" android:layout_gravity="center"
        android:layout_height="60dp" android:orientation="horizontal">
        <TextView
            android:layout_width="60dp"
            android:layout_height="40dp" android:text="昵称" android:layout_gravity="center_vertical" android:textSize="16sp" android:gravity="center" />
        <EditText android:id="@+id/register_nickname"
            android:layout_width="240dp" android:maxLines="1" android:inputType="text" android:layout_gravity="center_vertical" android:layout_marginLeft="16dp"
            android:layout_height="40dp" android:textSize="20sp" android:background="@drawable/radius" android:paddingLeft="8dp" android:paddingRight="8dp" android:paddingTop="4dp" android:paddingBottom="4dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"/>

    <LinearLayout
        android:layout_width="wrap_content" android:layout_gravity="center"
        android:layout_height="60dp" android:orientation="horizontal">
        <TextView
            android:layout_width="60dp"
            android:layout_height="40dp" android:text="密码" android:layout_gravity="center_vertical" android:textSize="16sp" android:gravity="center" />
        <EditText android:id="@+id/register_password"
            android:layout_width="240dp" android:maxLines="1" android:inputType="textPassword" android:layout_gravity="center_vertical" android:layout_marginLeft="16dp"
            android:layout_height="40dp" android:textSize="20sp" android:background="@drawable/radius" android:paddingLeft="8dp" android:paddingRight="8dp" android:paddingTop="4dp" android:paddingBottom="4dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content" android:layout_gravity="center"
        android:layout_height="60dp" android:orientation="horizontal">
        <TextView
            android:layout_width="60dp"
            android:layout_height="40dp" android:text="确认密码" android:layout_gravity="center_vertical" android:textSize="12sp" android:gravity="center" />
        <EditText android:id="@+id/register_confirm_password"
            android:layout_width="240dp" android:maxLines="1" android:inputType="textPassword" android:layout_gravity="center_vertical" android:layout_marginLeft="16dp"
            android:layout_height="40dp" android:textSize="20sp" android:background="@drawable/radius" android:paddingLeft="8dp" android:paddingRight="8dp" android:paddingTop="4dp" android:paddingBottom="4dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"/>

    <LinearLayout
        android:layout_width="316dp" android:layout_gravity="center"
        android:layout_height="wrap_content" android:orientation="vertical">
        <Button android:id="@+id/register_submit"
            android:layout_width="wrap_content" android:text="提交" android:background="@drawable/radius"
            android:layout_height="40dp" android:layout_gravity="right" />
    </LinearLayout>

</LinearLayout>