<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:orientation="vertical" android:padding="16dp"
    android:layout_height="match_parent">

    <LinearLayout android:layout_marginTop="32dp" android:background="@drawable/border"
        android:layout_width="match_parent" android:layout_gravity="center"
        android:layout_height="40dp" android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent" android:text="用户  ID" android:layout_gravity="center_vertical" android:textSize="20sp" android:gravity="center" />
        <View
            android:layout_width="1dp" android:background="#999999"
            android:layout_height="match_parent"/>
        <EditText android:id="@+id/change_password_userid" android:layout_margin="2dp" android:hint="2-15个字符"
            android:layout_width="match_parent" android:maxLines="1" android:inputType="text" android:layout_gravity="center_vertical" android:layout_marginLeft="16dp"
            android:layout_height="match_parent" android:textSize="20sp" android:background="#00ffffff" android:paddingLeft="8dp" android:paddingRight="8dp" android:paddingTop="4dp" android:paddingBottom="4dp" />
    </LinearLayout>

    <LinearLayout android:background="@drawable/border" android:layout_marginTop="16dp"
        android:layout_width="match_parent" android:layout_gravity="center"
        android:layout_height="40dp" android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent" android:text="原 密 码" android:layout_gravity="center_vertical" android:textSize="20sp" android:gravity="center" />
        <View
            android:layout_width="1dp" android:background="#999999"
            android:layout_height="match_parent"/>
        <EditText android:id="@+id/change_password_old_password" android:layout_margin="2dp"
            android:layout_width="match_parent" android:maxLines="1" android:inputType="textPassword" android:layout_gravity="center_vertical" android:layout_marginLeft="16dp"
            android:layout_height="match_parent" android:textSize="20sp" android:background="#00ffffff" android:paddingLeft="8dp" android:paddingRight="8dp" android:paddingTop="4dp" android:paddingBottom="4dp" />
    </LinearLayout>

    <LinearLayout android:background="@drawable/border" android:layout_marginTop="16dp"
        android:layout_width="match_parent" android:layout_gravity="center"
        android:layout_height="40dp" android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent" android:text="新 密 码" android:layout_gravity="center_vertical" android:textSize="20sp" android:gravity="center" />
        <View
            android:layout_width="1dp" android:background="#999999"
            android:layout_height="match_parent"/>
        <EditText android:id="@+id/change_password_new_password" android:layout_margin="2dp" android:hint="6~10个字符"
            android:layout_width="match_parent" android:maxLines="1" android:inputType="textPassword" android:layout_gravity="center_vertical" android:layout_marginLeft="16dp"
            android:layout_height="match_parent" android:textSize="20sp" android:background="#00ffffff" android:paddingLeft="8dp" android:paddingRight="8dp" android:paddingTop="4dp" android:paddingBottom="4dp" />
    </LinearLayout>

    <LinearLayout android:background="@drawable/border" android:layout_marginTop="8dp"
        android:layout_width="match_parent" android:layout_gravity="center"
        android:layout_height="40dp" android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent" android:text="确认密码" android:layout_gravity="center_vertical" android:textSize="18sp" android:gravity="center" />
        <View
            android:layout_width="1dp" android:background="#999999"
            android:layout_height="match_parent"/>
        <EditText android:id="@+id/change_password_confirm_password" android:layout_margin="2dp"
            android:layout_width="match_parent" android:maxLines="1" android:inputType="textPassword" android:layout_gravity="center_vertical" android:layout_marginLeft="16dp"
            android:layout_height="match_parent" android:textSize="20sp" android:background="#00ffffff" android:paddingLeft="8dp" android:paddingRight="8dp" android:paddingTop="4dp" android:paddingBottom="4dp" />
    </LinearLayout>

    <Button android:id="@+id/change_password_submit" android:layout_marginTop="16dp"
        android:layout_width="match_parent" android:text="提    交" android:background="@drawable/border" android:textSize="22sp"
        android:layout_height="40dp" />

</LinearLayout>
