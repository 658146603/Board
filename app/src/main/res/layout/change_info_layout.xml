<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout android:layout_marginRight="16dp" android:layout_marginLeft="16dp"
        android:layout_width="match_parent" android:layout_marginTop="16dp"
        android:layout_height="72dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content" android:paddingLeft="8dp" android:paddingRight="8dp"
            android:layout_height="match_parent" android:text="头     像" android:textSize="24sp" android:gravity="center" />
        <View
            android:layout_width="1dp" android:background="#999999"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/change_info_portrait"
            android:layout_width="match_parent"
            android:scaleType="fitEnd" android:padding="8dp"
            android:layout_height="72dp"
            android:gravity="center"
            app:srcCompat="@drawable/ic_huaji" />
    </LinearLayout>

    <LinearLayout android:background="@drawable/border" android:layout_marginRight="16dp" android:layout_marginLeft="16dp"
        android:layout_width="match_parent" android:layout_marginTop="16dp"
        android:layout_height="40dp" android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content" android:paddingLeft="8dp" android:paddingRight="8dp"
            android:layout_height="match_parent" android:text="用户 ID" android:textSize="24sp" android:gravity="center_vertical" />
        <View
            android:layout_width="1dp" android:background="#999999"
            android:layout_height="match_parent"/>
        <TextView android:id="@+id/change_info_userid"
            android:layout_width="match_parent" android:textIsSelectable="true"
            android:layout_height="match_parent" android:paddingRight="8dp"
            android:text="000000" android:maxLines="1" android:ellipsize="end"
            android:textSize="20sp" android:gravity="center_vertical|right"/>
    </LinearLayout>
    <LinearLayout android:background="@drawable/border" android:layout_marginRight="16dp" android:layout_marginLeft="16dp"
        android:layout_width="match_parent" android:layout_marginTop="16dp"
        android:layout_height="40dp" android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content" android:paddingLeft="8dp" android:paddingRight="8dp"
            android:layout_height="match_parent" android:text="昵     称" android:textSize="24sp" android:gravity="center_vertical" />
        <View
            android:layout_width="1dp" android:background="#999999"
            android:layout_height="match_parent"/>
        <EditText android:id="@+id/change_info_nickname"  android:background="#00ffffff"
            android:layout_width="match_parent" android:textIsSelectable="true" android:layout_margin="2dp"
            android:layout_height="match_parent" android:paddingRight="8dp"
            android:text="nickname" android:maxLines="1" android:ellipsize="end"
            android:textSize="20sp" android:gravity="center_vertical|end"/>
    </LinearLayout>

    <LinearLayout android:background="@drawable/border" android:layout_marginRight="16dp" android:layout_marginLeft="16dp"
        android:layout_width="match_parent" android:layout_marginTop="16dp"
        android:layout_height="40dp" android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content" android:paddingLeft="8dp" android:paddingRight="8dp"
            android:layout_height="match_parent" android:text="邮     箱" android:textSize="24sp" android:gravity="center_vertical" />
        <View
            android:layout_width="1dp" android:background="#999999"
            android:layout_height="match_parent"/>
        <EditText android:id="@+id/change_info_email" android:background="#00ffffff"
            android:layout_width="match_parent" android:textIsSelectable="true" android:layout_margin="2dp"
            android:layout_height="match_parent" android:paddingRight="8dp"
            android:text="email@server.com" android:maxLines="1" android:ellipsize="end"
            android:textSize="20sp" android:gravity="center_vertical|end"/>
    </LinearLayout>

    <Button android:id="@+id/change_info_submit" android:layout_marginRight="16dp" android:layout_marginLeft="16dp"
        android:layout_width="match_parent" android:layout_marginTop="32dp" android:background="@drawable/border"
        android:layout_height="40dp" android:text="确认修改信息" android:textSize="18sp" android:layout_marginBottom="16dp" />

</LinearLayout>
